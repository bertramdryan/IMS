<div class="input-group">
    <input type="text" 
           class="form-control" 
           placeholder="Type product name to search"
           @bind-value="productNameSearch"/>
    <button type="button" 
            class="btn btn-primary"
            @onclick="OnSearch">Search</button>        
</div>

@code {
    private string productNameSearch = string.Empty;
    [Parameter]
    public EventCallback<string> OnSearchProduct { get; set; }
    private void OnSearch() 
    {
        OnSearchProduct.InvokeAsync(productNameSearch);
    }
}